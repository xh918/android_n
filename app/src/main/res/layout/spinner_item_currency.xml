<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="vertical"
        android:paddingRight="@dimen/spinner_item_horizontal_padding"
        android:paddingLeft="@dimen/spinner_item_horizontal_padding"
        android:paddingTop="@dimen/spinner_item_vertical_padding"
        android:paddingBottom="@dimen/spinner_item_vertical_padding"
        android:gravity="center">
        <TextView
            android:id="@+id/ticker_spinner_tv"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/text_black"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_counter_separator_height"
        android:background="@color/converter_separator"></LinearLayout>
</LinearLayout>